<Window x:Class="PlottingBoard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PlottingBoard"
        Title="MainWindow" ResizeMode="CanResizeWithGrip" SizeToContent="WidthAndHeight">
    <Window.Resources>
        <local:MillToDegreeConverter x:Key="millToDegConverter"/>
    </Window.Resources>

    <Grid Width="1000" Height="600">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="193*"/>
            <ColumnDefinition Width="614*"/>
            <ColumnDefinition Width="193*"/>
        </Grid.ColumnDefinitions>

        <Canvas x:Name="GridCanvas" Margin="7,0" Height="600" Width="600" Grid.Column="1"/>

        <Image x:Name="MillDisk" HorizontalAlignment="Center" Height="600" VerticalAlignment="Center" Width="600" Source="C:\Users\Matthew\Desktop\Target_Protractor__07711_zoom_edit.png" RenderTransformOrigin="0.5,0.5" Grid.Column="1" Margin="7,0">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="{Binding ElementName=MillSlider, Path=Value, Converter={StaticResource millToDegConverter}}"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Slider x:Name="MillSlider" 
                HorizontalAlignment="Left" 
                Margin="10,10,0,0" 
                VerticalAlignment="Top" 
                Width="142" 
                Maximum="6400" LargeChange="10" SmallChange="1"/>
        <TextBox x:Name="MillText" 
                 HorizontalAlignment="Left" 
                 Height="23" 
                 Margin="10,37,0,0" 
                 TextWrapping="Wrap" 
                 Text="{Binding ElementName=MillSlider, Path=Value, StringFormat=#0}"
                 VerticalAlignment="Top" 
                 Width="52" 
                 MaxLength="6" RenderTransformOrigin="0.327,0.348"/>
        <TextBox x:Name="DegText" 
                 HorizontalAlignment="Left" 
                 Height="23" 
                 Margin="67,37,0,0" 
                 TextWrapping="Wrap" 
                 Text="{Binding ElementName=MillSlider, Path=Value, Converter={StaticResource millToDegConverter}, StringFormat=0.00°}"
                 VerticalAlignment="Top" 
                 Width="52" 
                 MaxLength="6" RenderTransformOrigin="0.327,0.348"/>
    </Grid>
</Window>
